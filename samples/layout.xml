		<text-shadow>3</text-shadow>
	</widget>
	<widget x="250" y="450" width="580" height="120" align="right">
		<type>duration</type>
		<name>DUREE</name>
		<margin>20</margin>
		<padding>5</padding>
		<text-shadow>3</text-shadow>
	</widget>
	<widget x="250" y="450" width="580" height="120" align="left">
		<type>cadence</type>
		<name>CADENCE</name>
		<margin>20</margin>
		<padding>5</padding>
		<text-shadow>3</text-shadow>
	</widget>
